<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/currency_converter_fragment_main_layout"
    android:orientation="vertical"
    android:background="#ff619dff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/cc_top_chooser_layout"
        android:layout_weight="0.1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cc_convert_string"
            android:id="@+id/cc_converter_sub_fragment_button"
            android:layout_weight="0.5"
            android:background="#fff8f4ff"
            android:textColor="#ff173c31" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cc_location"
            android:id="@+id/cc_location_sub_fragment_button"
            android:layout_weight="0.5"
            android:background="#ff959799"
            android:textColor="#ff0c4230" />
    </LinearLayout>

    <!--<fragment android:name="com.example.vpetrosyan.converterbeta3.LocationSubFragment"
        android:id="@+id/titles_fragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"/>-->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cc_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:layout_marginTop="5dp" />
</LinearLayout>